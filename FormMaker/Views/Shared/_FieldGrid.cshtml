@model FormMaker.ViewModels.FormViewModel
<table class="table table-bordered table-striped" style="direction:rtl">
    <thead>
        <tr>
            <td>ردیف</td>
            <td>نام فرم</td>
            <td>فیلد</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @if (Model.forms.Count > 0 )
        {
            @for (int i = 0; i < Model.forms.Count; i++)
            {
                <tr>
                    <td>@(i+1)</td>
                    <td>@Model.forms[i].Name</td>
                    <td class="text-center"><a class="btn btn-secondary" asp-action="Index" asp-controller="FormField" asp-route-Id="@Model.forms[i].Id"><i class="bi bi-list-check"></i></a></td>
                    <td class="text-center"><a class="btn btn-danger" asp-action="Delete" asp-route-Id="@Model.forms[i].Id">Delete</a></td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td>اطلاعاتی وجود ندارد</td>
            </tr>
        }
    </tbody>
</table>